<Page
    x:Class="WpfDemo.View.CourseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemo.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CourseView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="160" />
            </Grid.ColumnDefinitions>
            <!--  学生信息表格  -->
            <Border
                Grid.Column="0"
                Margin="0,0,25,10"
                Padding="16"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="学生列表" />
                    <!--  此处可放置DataGrid等控件  -->
                    <ListView Grid.Row="1" Margin="0,0,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="80" Header="学号" />
                                <GridViewColumn Width="120" Header="姓名" />
                                <GridViewColumn Width="60" Header="性别" />
                                <GridViewColumn Width="60" Header="选课时间" />
                                <GridViewColumn Width="120" Header="操作">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <Button Content="修改" />
                                                <Button Content="删除" />
                                                <Button Content="查看" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
            <!--  操作按钮  -->
            <StackPanel
                Grid.Column="1"
                Margin="0,0,0,0"
                VerticalAlignment="Top">
                <Button Content="添加" />
                <Button Content="修改" />
                <Button Content="删除" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

<Window
    x:Class="WpfDemo.View.window.StudentEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemo.View.window"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:WpfDemo.ViewModel"
    Title="学生信息编辑"
    Width="400"
    Height="400"
    d:DataContext="{d:DesignInstance Type=viewmodel:StudentViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="学生信息编辑" />
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="姓名:" />
            <TextBox
                x:Name="NameTextBox"
                Grid.Column="1"
                Height="25"
                VerticalContentAlignment="Center"
                Text="{Binding student.FirstMidName}" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="姓名:" />
            <TextBox
                x:Name="AgeTextBox"
                Grid.Column="1"
                Height="25"
                VerticalContentAlignment="Center"
                Text="{Binding student.LastName}" />
        </Grid>



        <StackPanel
            Grid.Row="5"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="SaveButton"
                Width="80"
                Height="30"
                Margin="10,0"
                Command="{Binding DataContext.AddStudentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding student}"
                Content="保存" />
            <Button
                x:Name="CancelButton"
                Width="80"
                Height="30"
                Margin="10,0"
                Command="{Binding DataContext.CancelStudentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                Content="取消" />
            <Button
                x:Name="DeleteButton"
                Width="80"
                Height="30"
                Margin="10,0"
                Click="Button_Click"
                Content="删除" />
        </StackPanel>
    </Grid>
</Window>
<Window
    x:Class="WpfDemo.View.window.StudentEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemo.View.window"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WpfDemo.ViewModel"
    Width="400"
    Height="400"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="text"
            Grid.Row="0"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="学生信息编辑" />
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="姓名:" />
            <TextBox
                x:Name="LastNameText"
                Grid.Column="1"
                Height="25"
                VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Student.LastName" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <ExceptionValidationRule />
                            <vm:StringValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="姓名:" />
            <TextBox
                x:Name="FirstNameText"
                Grid.Column="1"
                Height="25"
                VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding
                        Path="Student.FirstMidName"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnExceptions="True">
                        <Binding.ValidationRules>
                            <ExceptionValidationRule />
                            <vm:StringValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>


        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

        </Grid>
        <StackPanel
            Grid.Row="3"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="SaveButton"
                Width="80"
                Height="30"
                Margin="10,0"
                Command="{Binding DataContext.AddStudentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding Student}"
                Content="新增"
                Visibility="Hidden">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="IsEnabled" Value="false" />
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ElementName=FirstNameText, Path=(Validation.HasError)}" Value="false" />
                                    <Condition Binding="{Binding ElementName=LastNameText, Path=(Validation.HasError)}" Value="false" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="IsEnabled" Value="true" />
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button
                x:Name="EditButton"
                Width="80"
                Height="30"
                Margin="10,0"
                Command="{Binding DataContext.EditStudentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding Student}"
                Content="保存"
                IsEnabled="False"
                Visibility="Hidden">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="IsEnabled" Value="false" />
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ElementName=FirstNameText, Path=(Validation.HasError)}" Value="false" />
                                    <Condition Binding="{Binding ElementName=LastNameText, Path=(Validation.HasError)}" Value="false" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="IsEnabled" Value="true" />
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button
                x:Name="DeleteButton"
                Width="80"
                Height="30"
                Margin="10,0"
                Click="CloseButton"
                Content="取消" />
        </StackPanel>
    </Grid>

</Window>